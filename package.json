{
  "name": "autoproject-playwright",
  "version": "1.0.0",
  "description": "Automated testing with Playwright and TypeScript",
  "scripts": {
    "test": "npx playwright test --project=chromium",
    "test:headed": "npx playwright test --project=chromium --headed",
    "test:debug": "npx playwright test --project=chromium --debug",
    "test:ui": "npx playwright test --project=chromium --ui",
    "test:staging": "set ENV=staging && npx playwright test --project=chromium",
    "test:preprod": "set ENV=pre-prod && npx playwright test --project=chromium",
    "test:staging-with-storage": "set ENV=staging && npx playwright test --project=with-storage",
    "test:staging-no-storage": "set ENV=staging && npx playwright test --project=no-storage",
    "test:preprod-with-storage": "set ENV=pre-prod && npx playwright test --project=with-storage",
    "test:preprod-no-storage": "set ENV=pre-prod && npx playwright test --project=no-storage",
    "report": "npx playwright show-report",
    "refresh:storage": "ts-node scripts/refresh-storage.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
