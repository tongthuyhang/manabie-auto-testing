{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs",
    "lib": [
      "ES2020", //allows you to use new JavaScript functions (Promise.allSettled, BigInt, etc.).
       "DOM" //Add type definitions for browser APIs (document, window, HTMLElement, querySelectorAll, 
    ],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": false,
    "useDefineForClassFields": true,
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
, "test-results/test-2.spec.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}